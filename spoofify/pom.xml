<project
    xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                        http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  
  <groupId>com.spoof</groupId>
  <artifactId>spoofify</artifactId>
  <version>1.5</version>

  <properties>
    <!-- JavaFX version -->
    <javafx.version>20</javafx.version>
    
    <!-- Java compiler level -->
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>

    <!-- If you have a local JavaFX SDK, put its path here:
         e.g. C:/javafx-sdk-20 -->
    <path.to.javafx.sdk>C:/path/to/javafx-sdk-20</path.to.javafx.sdk>
  </properties>

  <dependencies>
    <!-- Direct JavaFX dependencies with explicit version -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>${javafx.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-fxml</artifactId>
      <version>${javafx.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-media</artifactId>
      <version>${javafx.version}</version>
    </dependency>
    <dependency>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-graphics</artifactId>
        <version>17.0.2</version>
    </dependency>
        <dependency>
        <groupId>org.json</groupId>
        <artifactId>json</artifactId>
        <version>20210307</version>
    </dependency>

    <!-- Example test dependency -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Use Exec Maven Plugin to run your main JavaFX class -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <mainClass>com.spoof.Spoofify</mainClass>
          <arguments>
            <!-- If you have a local JavaFX SDK unzipped -->
            <argument>--module-path</argument>
            <argument>${path.to.javafx.sdk}/lib</argument>

            <!-- Add whichever modules your app uses -->
            <argument>--add-modules</argument>
            <argument>javafx.controls,javafx.fxml,javafx.media</argument>
          </arguments>
        </configuration>
      </plugin>

      <!-- Standard Maven compiler plugin for Java 17 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
